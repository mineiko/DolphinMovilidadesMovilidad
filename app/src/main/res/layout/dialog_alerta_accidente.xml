<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/tipoChoque"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="2dp"/>


        <RadioGroup
            android:id="@+id/TiposDeChoque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <RadioButton
                android:id="@+id/choqueLeveN1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choque Leve Nivel 1:\nSe reanudar치 el recorrido en un momento."
                android:padding="5dp"
                />
            <RadioButton
                android:id="@+id/choqueLeveN2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choque Leve Nivel 2:\nNo se continuar치 el recorrido, los ni침os ser치n enviados en otro medio"
                android:padding="5dp"
                />
            <RadioButton
                android:id="@+id/choqueFuerteN1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choque Fuerte Nivel 1:\nSin heridos graves, a la espera de la llegada de colegio, padres o ambulancia."
                android:padding="5dp"
                />
            <RadioButton
                android:id="@+id/choqueFuerteN2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choque Fuerte Nivel 2:\ncon heridos, avisar urgente a ambulancia, padres y colegio."
                android:padding="5dp"
                />
        </RadioGroup>



    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:text="@string/enviar"
        android:textSize="20dp"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:textSize="20dp"
        android:text="@string/cancelar"
        android:textColor="@android:color/white" />

</LinearLayout>
